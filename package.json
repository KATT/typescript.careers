{
  "name": "typescript-careers",
  "version": "8.4.1",
  "private": true,
  "scripts": {
    "build-heroku:1-generate": "prisma generate",
    "build-heroku:2-build": "next build",
    "build": "run-s build-heroku:*",
    "build-vercel:1-generate": "prisma generate",
    "build-vercel:2-migrate": "prisma migrate deploy",
    "build-vercel:3-seed": "yarn db-seed",
    "build-vercel:4-build-vercel": "next build",
    "build-vercel": "run-s build-vercel:*",
    "dev": "next dev",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate": "yarn prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dx": "cross-env DATABASE_URL=postgresql://postgres:@localhost:5433/typescript.careers run-s db-up db-migrate db-seed dev",
    "generate": "prisma generate",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "start": "next start",
    "studio": "prisma studio",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "jest"
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
  "cacheDirectories": [
    "node_modules/",
    ".next/cache/"
  ],
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@heroicons/react": "^1.0.3",
    "@prisma/client": "3.0.2",
    "@splitbee/web": "^0.2.4",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "@trpc/client": "^9.2.0",
    "@trpc/next": "^9.2.0",
    "@trpc/react": "^9.2.0",
    "@trpc/server": "^9.2.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.11.0",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.36",
    "@types/turndown": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.30.0",
    "abort-controller": "^3.0.0",
    "algoliasearch": "^4.10.3",
    "autoprefixer": "^10.3.1",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "envsafe": "^2.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.5",
    "jest-playwright": "^0.0.1",
    "jest-playwright-preset": "^1.4.5",
    "lodash": "^4.17.21",
    "next": "^11.1.2",
    "next-seo": "^4.26.0",
    "node-fetch": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.14.1",
    "postcss": "^8.3.6",
    "prettier": "^2.3.0",
    "prisma": "3.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^6.0.3",
