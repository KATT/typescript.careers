// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
  // provider = "sqlite"
  // url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model AppState {
  id          Int       @id @default(1)
  lastReindex DateTime?
}

model Image {
  id          String    @id @default(uuid())
  url         String    @unique
  lqip        String
  width       Int
  height      Int
  Company     Company[]
  originalUrl String?   @unique
}

model Company {
  id      String  @id @default(uuid())
  name    String  @unique
  logo    Image?  @relation(fields: [logoId], references: [id])
  logoUrl String?
  url     String?

  Job    Job[]
  logoId String?
}

model Source {
  id   String  @id @default(uuid())
  slug String  @unique
  url  String
  name String?
  Job  Job[]
}

enum JobType {
  UNKNOWN
  FULL_TIME
  CONTRACT
}

model Job {
  id          String   @id @default(uuid())
  title       String
  url         String
  applyUrl    String
  text        String
  remote      Boolean
  location    String?
  publishDate DateTime
  tags        String[]
  jobType     JobType  @default(UNKNOWN)
  category    String?

  company   Company @relation(fields: [companyId], references: [id])
  companyId String

  sourceSlug String
  sourceKey  String
  sourceJSON String?
  source     Source  @relation(fields: [sourceSlug], references: [slug])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@unique([sourceSlug, sourceKey])
}
